# ==============================================
# Backend (FastAPI) Environment Variables
# ==============================================
# Copy this file to .env and fill in the values

# ----------------------------------------------
# Database Connection
# ----------------------------------------------
# For Docker Compose: use service name 'postgres' as host
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/deck_manager_dev

# ----------------------------------------------
# CORS Configuration
# ----------------------------------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# ----------------------------------------------
# NextAuth JWT Secret (for JWT verification)
# ----------------------------------------------
# Must match the NEXTAUTH_SECRET in frontend
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here

# ----------------------------------------------
# Environment
# ----------------------------------------------
ENVIRONMENT=development
